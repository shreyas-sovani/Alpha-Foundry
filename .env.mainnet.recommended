# ============================================================================
# RECOMMENDED MAINNET CONFIGURATION FOR HACKATHON DEMO
# ============================================================================
# This configuration targets LIVE, ACTIVE Ethereum Mainnet pools
# with high swap volume for maximum demo impact.
#
# Pool Selection: Uniswap V2 Router (high activity, battle-tested)
# Network: Ethereum Mainnet (Chain ID: 1)
# Update Frequency: Every 15 seconds
# Window: 2 minutes (ultra-tight for live feel)
# ============================================================================

# Blockscout Mainnet API (Public)
# Reference: https://docs.blockscout.com
BLOCKSCOUT_MCP_BASE=https://eth.blockscout.com/api/v2

# Autoscout Explorer (Optional - use Etherscan for now)
AUTOSCOUT_BASE=https://etherscan.io

# Ethereum Mainnet
CHAIN_ID=1
NETWORK_LABEL=Ethereum Mainnet

# ACTIVE DEX POOLS - Uniswap V3 Pool Pairs (emit Swap events directly)
# USDC/WETH 0.05% fee tier - highest liquidity V3 pool (~$300M+ TVL)
DEX_POOL_A=0x88e6A0c2dDD26FEEb64F039a2c41296FcB3f5640
# WETH/USDT 0.05% fee tier - second highest liquidity V3 pool
DEX_POOL_B=0x11b815efB8f581194ae79006d24E0d814B7697F6

# DEX Type
DEX_TYPE=v3

# HACKATHON OPTIMIZED SETTINGS
WORKER_POLL_SECONDS=15
WINDOW_MINUTES=2
MAX_ROWS_PER_ROTATION=1000
PREVIEW_ROWS=8
MCP_INIT_ON_START=true

# Activity Validation
MIN_SWAPS_PER_CYCLE=1
STALE_THRESHOLD_SECONDS=300

# Visual Enhancements
ENABLE_EMOJI_MARKERS=true
ENABLE_SPREAD_ALERTS=true

# State and Output
LAST_BLOCK_STATE_PATH=state/last_block.json
DATA_OUT_DIR=apps/worker/out

# Logging
LOG_LEVEL=DEBUG

# Reference ETH Price (update periodically or fetch from oracle)
REFERENCE_ETH_PRICE_USD=2500.0

