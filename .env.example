# Blockscout MCP Server
# Reference: https://docs.blockscout.com/devs/mcp-server
# Hosted endpoint: https://mcp.blockscout.com
BLOCKSCOUT_MCP_BASE=

# Autoscout Explorer Base URL
# Reference: https://docs.blockscout.com/using-blockscout/autoscout
# Example: https://your-instance.autoscout.blockscout.com
AUTOSCOUT_BASE=

# Chain Configuration
# Example: 11155111 for Sepolia testnet, 1 for Ethereum mainnet
CHAIN_ID=

# DEX Pool Addresses (contracts to monitor)
# Set at least one pool/router address
DEX_POOL_A=
DEX_POOL_B=

# Worker Configuration
WORKER_POLL_SECONDS=300
WINDOW_MINUTES=5
MAX_ROWS_PER_ROTATION=1000
PREVIEW_ROWS=5
MCP_INIT_ON_START=true

# State and Output
LAST_BLOCK_STATE_PATH=state/last_block.json
DATA_OUT_DIR=apps/worker/out

# Logging
LOG_LEVEL=INFO
